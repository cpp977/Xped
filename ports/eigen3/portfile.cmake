vcpkg_from_gitlab(
    GITLAB_URL https://gitlab.com
    OUT_SOURCE_PATH SOURCE_PATH
    REPO libeigen/eigen
    REF 15ac3765c41b39d387736db46607c7b8460710fa
    SHA512 ecf2ff7408ed96f3699eb5dbe3fd1aa839ac76ff068a5aebb561c7a323f26bf80221b85e6d391adc1c53bff5a4771949197ab3db65931d5296ab0aeb902c43b1
